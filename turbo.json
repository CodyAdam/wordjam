{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_SOCKET_URL"],
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "env": ["NEXT_PUBLIC_SOCKET_URL", "DB_DB", "DB_HOST", "DB_USER", "DB_PASSWORD", "DB_PORT", "SAVE_DELAY_SECONDS"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
